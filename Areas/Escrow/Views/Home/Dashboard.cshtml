@model DashboardViewModel
@{
    ViewData["Title"] = "Peer Escrow";
}

@section Styles {
    <link rel="stylesheet" href="~/css/escrow.css" asp-append-version="true" />
}

<div class="peer-escrow" style="margin-top: 70px;">
    <div class="container mt-4">
        <!-- Demo banner -->
        @if (Model.IsDemoMode)
        {
            <div class="alert alert-warning d-flex align-items-center mb-4">
                <strong class="me-2">Demo Mode</strong>
                <span>Escrows are stored in-memory. No blockchain required. Use any Ethereum address to simulate roles.</span>
            </div>
        }

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">My Escrows</h2>
            <button class="btn btn-primary" data-bs-toggle="collapse" data-bs-target="#createForm">
                + New Escrow
            </button>
        </div>

        <!-- Create Form (collapsible) -->
        <div class="collapse mb-4" id="createForm">
            <div class="card" style="background: var(--pe-bg-card); border-color: var(--pe-border);">
                <div class="card-header">
                    <h5 class="mb-0">Create New Escrow</h5>
                </div>
                <div class="card-body">
                    <form id="form-create-escrow">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Seller Address</label>
                                <input type="text" class="form-control" id="input-seller"
                                       placeholder="0x..." required pattern="^0x[0-9a-fA-F]{40}$" />
                                <div class="form-text">Ethereum address of the seller</div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Arbiter Address</label>
                                <input type="text" class="form-control" id="input-arbiter"
                                       placeholder="0x..." required pattern="^0x[0-9a-fA-F]{40}$" />
                                <div class="form-text">Neutral third-party for dispute resolution</div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Amount (ETH)</label>
                                <input type="number" class="form-control" id="input-amount"
                                       step="0.0001" min="0.0001" max="1000" required />
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Arbiter Fee (basis points)</label>
                                <input type="number" class="form-control" id="input-fee"
                                       value="100" min="0" max="1000" />
                                <div class="form-text">100 = 1%, max 1000 = 10%</div>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Your Address (Buyer)</label>
                                <input type="text" class="form-control" id="input-buyer"
                                       placeholder="0x... (auto-filled if wallet connected)" required pattern="^0x[0-9a-fA-F]{40}$" />
                            </div>
                            <div class="col-12">
                                <label class="form-label">Description</label>
                                <textarea class="form-control" id="input-description" rows="2"
                                          minlength="10" maxlength="500" required
                                          placeholder="What is this escrow for? (10-500 chars)"></textarea>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary" id="btn-create">
                                    Create Escrow
                                </button>
                                <button type="button" class="btn btn-outline-secondary" data-bs-toggle="collapse" data-bs-target="#createForm">
                                    Cancel
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Escrow List -->
        <div id="escrow-list">
            <div class="text-center text-muted py-5" id="escrow-loading">
                Loading escrows...
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/escrow.js" asp-append-version="true"></script>
}
