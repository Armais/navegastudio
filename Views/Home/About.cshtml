@inject IViewLocalizer L
@{
    ViewData["Title"] = L["PageTitle"].Value;
}

<!-- ===== HERO ===== -->
<section class="section-dark" style="padding-top: 7rem;">
    <div class="container text-center">
        <div data-aos="fade-up">
            <span class="section-badge">@L["Badge"]</span>
        </div>
        <h1 class="section-title" data-aos="fade-up" data-aos-delay="100">@L["Hero_Title"]</h1>
        <p class="section-subtitle" data-aos="fade-up" data-aos-delay="200">@L["Hero_Subtitle"]</p>
    </div>
</section>

<!-- ===== BIO ===== -->
<section class="section-elevated">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8" data-aos="fade-up">
                <h2 class="mb-4">@L["Bio_Title"]</h2>
                <p class="text-muted" style="font-size: 1.05rem; line-height: 1.8;">@L["Bio_P1"]</p>
                <p class="text-muted" style="font-size: 1.05rem; line-height: 1.8;">@L["Bio_P2"]</p>
            </div>
        </div>
    </div>
</section>

<!-- ===== SKILLS ===== -->
<section class="section-dark">
    <div class="container">
        <div class="text-center" data-aos="fade-up">
            <span class="section-badge">@L["Skills_Badge"]</span>
            <h2 class="section-title">@L["Skills_Title"]</h2>
        </div>
        <div class="row g-4 mt-2">
            <div class="col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="0">
                <div class="service-card">
                    <div class="service-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" /></svg>
                    </div>
                    <h5>@L["Skill1_Title"]</h5>
                    <p>@L["Skill1_Desc"]</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="100">
                <div class="service-card">
                    <div class="service-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
                    </div>
                    <h5>@L["Skill2_Title"]</h5>
                    <p>@L["Skill2_Desc"]</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="200">
                <div class="service-card">
                    <div class="service-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" /></svg>
                    </div>
                    <h5>@L["Skill3_Title"]</h5>
                    <p>@L["Skill3_Desc"]</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="300">
                <div class="service-card">
                    <div class="service-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" /></svg>
                    </div>
                    <h5>@L["Skill4_Title"]</h5>
                    <p>@L["Skill4_Desc"]</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ===== METHODOLOGY ===== -->
<section class="section-elevated">
    <div class="container">
        <div class="text-center" data-aos="fade-up">
            <span class="section-badge">@L["Method_Badge"]</span>
            <h2 class="section-title">@L["Method_Title"]</h2>
        </div>
        <div class="row g-4 mt-2">
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="0">
                <div class="service-card">
                    <h5>@L["Method1_Title"]</h5>
                    <p>@L["Method1_Desc"]</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                <div class="service-card">
                    <h5>@L["Method2_Title"]</h5>
                    <p>@L["Method2_Desc"]</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <div class="service-card">
                    <h5>@L["Method3_Title"]</h5>
                    <p>@L["Method3_Desc"]</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ===== TECH STACK ===== -->
<section class="section-dark">
    <div class="container">
        <div class="text-center" data-aos="fade-up">
            <span class="section-badge">@L["Tech_Badge"]</span>
            <h2 class="section-title">@L["Tech_Title"]</h2>
        </div>
        <div class="text-center mt-4" data-aos="fade-up" data-aos-delay="100">
            <span class="tech-badge">C# 12</span>
            <span class="tech-badge">ASP.NET Core 8</span>
            <span class="tech-badge">Entity Framework Core</span>
            <span class="tech-badge">PostgreSQL</span>
            <span class="tech-badge">SignalR</span>
            <span class="tech-badge">Redis</span>
            <span class="tech-badge">Chart.js</span>
            <span class="tech-badge">Bootstrap 5</span>
            <span class="tech-badge">xUnit</span>
            <span class="tech-badge">Docker</span>
            <span class="tech-badge">Railway</span>
            <span class="tech-badge">GitHub Actions</span>
        </div>
    </div>
</section>

<!-- ===== VALUES ===== -->
<section class="section-elevated">
    <div class="container">
        <div class="text-center" data-aos="fade-up">
            <span class="section-badge">@L["Values_Badge"]</span>
            <h2 class="section-title">@L["Values_Title"]</h2>
        </div>
        <div class="row g-4 mt-2">
            <div class="col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="0">
                <div class="service-card">
                    <h5>@L["Value1_Title"]</h5>
                    <p>@L["Value1_Desc"]</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="100">
                <div class="service-card">
                    <h5>@L["Value2_Title"]</h5>
                    <p>@L["Value2_Desc"]</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="200">
                <div class="service-card">
                    <h5>@L["Value3_Title"]</h5>
                    <p>@L["Value3_Desc"]</p>
                </div>
            </div>
            <div class="col-md-6 col-lg-3" data-aos="fade-up" data-aos-delay="300">
                <div class="service-card">
                    <h5>@L["Value4_Title"]</h5>
                    <p>@L["Value4_Desc"]</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ===== CTA ===== -->
<section class="cta-section">
    <div class="container" data-aos="fade-up">
        <h2>@L["CTA_Title"]</h2>
        <p>@L["CTA_Subtitle"]</p>
        <a asp-controller="Home" asp-action="Contact" class="btn btn-ns-primary btn-lg">@L["CTA_Button"]</a>
    </div>
</section>
