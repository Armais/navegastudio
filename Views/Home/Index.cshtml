                            <li>@L["Portfolio_RiskF4"]</li>
                        </ul>
                    </div>
                    <div class="tool-footer">
                        <a asp-area="Risk" asp-controller="Calculator" asp-action="Index" class="btn btn-ns-primary w-100">@L["Portfolio_RiskBtn"]</a>
