@inject IViewLocalizer L
@{
    ViewData["Title"] = "Home";
}

<!-- ===== HERO SECTION ===== -->
<section class="hero-section">
    <div id="tsparticles"></div>
    <div class="hero-content">
        <div data-aos="fade-up">
            <span class="section-badge">@L["Hero_Badge"]</span>
        </div>
        <h1 class="hero-title" data-aos="fade-up" data-aos-delay="100">
            @L["Hero_Title"]<br />
            <span class="gradient-text" id="typed-output"></span>
        </h1>
        <p class="hero-subtitle" data-aos="fade-up" data-aos-delay="200">
            @L["Hero_Subtitle"]
        </p>
        <div data-aos="fade-up" data-aos-delay="300">
            <a href="#portfolio" class="btn btn-ns-primary me-2 mb-2">@L["Hero_ViewPortfolio"]</a>
            <a asp-controller="Home" asp-action="Contact" class="btn btn-ns-outline mb-2">@L["Hero_StartProject"]</a>
        </div>
    </div>
</section>

<!-- ===== STATS SECTION ===== -->
<section class="section-dark">
    <div class="container">
        <div class="row g-4" data-aos="fade-up">
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-number countup" data-target="10" data-suffix="+">0</div>
                    <div class="stat-label">@L["Stats_TradingStrategies"]</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-number countup" data-target="3">0</div>
                    <div class="stat-label">@L["Stats_ExchangesIntegrated"]</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-number countup" data-target="26" data-suffix="+">0</div>
                    <div class="stat-label">@L["Stats_SymbolsSupported"]</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-number countup" data-target="99.9" data-suffix="%" data-decimals="1">0</div>
                    <div class="stat-label">@L["Stats_UptimeTarget"]</div>
                </div>
            </div>
        </div>
    </div>
</section>

