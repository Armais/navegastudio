@section Scripts {
    <!-- tsParticles -->
    <script src="https://cdn.jsdelivr.net/npm/tsparticles-slim@2.12.0/tsparticles.slim.bundle.min.js"></script>
    <!-- Typed.js -->
    <script src="https://cdn.jsdelivr.net/npm/typed.js@2.1.0/dist/typed.umd.js"></script>
    <!-- CountUp.js -->
    <script src="https://cdn.jsdelivr.net/npm/countup.js@2.8.0/dist/countUp.umd.js"></script>

    <script>
        // --- tsParticles Config ---
        tsParticles.load("tsparticles", {
            fullScreen: { enable: false },
            particles: {
                number: {
                    value: window.innerWidth < 768 ? 30 : 70,
                    density: { enable: true, area: 800 }
                },
                color: { value: "#0066CC" },
                links: {
                    enable: true,
                    color: "#0066CC",
                    distance: 150,
                    opacity: 0.3,
                    width: 1
                },
                move: {
                    enable: true,
                    speed: 1.2,
                    direction: "none",
                    outModes: { default: "bounce" }
                },
                size: {
                    value: { min: 1, max: 3 }
                },
                opacity: {
                    value: { min: 0.3, max: 0.7 }
                }
            },
            interactivity: {
                events: {
                    onHover: { enable: true, mode: "grab" },
                    resize: true
                },
                modes: {
                    grab: {
                        distance: 180,
                        links: { opacity: 0.6 }
                    }
                }
            },
            detectRetina: true
        });

        // --- Typed.js Config ---
        new Typed('#typed-output', {
            strings: [
                '@Html.Raw(L["Typed_TradingSystems"].Value)',
                '@Html.Raw(L["Typed_CryptoAnalytics"].Value)',
                '@Html.Raw(L["Typed_RiskManagement"].Value)',
                '@Html.Raw(L["Typed_FinancialAPIs"].Value)',
                '@Html.Raw(L["Typed_FintechSolutions"].Value)'
            ],
            typeSpeed: 60,
            backSpeed: 40,
            backDelay: 2000,
            loop: true,
            showCursor: true,
            cursorChar: '|'
        });

        // --- CountUp Init ---
        initCountUpObserver();
    </script>
}
