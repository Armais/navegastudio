                    </div>
                    <div class="tool-footer">
                        <a asp-area="Crypto" asp-controller="Dashboard" asp-action="Index" class="btn btn-ns-primary w-100">@L["Portfolio_CryptoBtn"]</a>
                    </div>
                </div>
            </div>
            <!-- Risk Calculator -->
            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="200">
                <div class="tool-card">
                    <div class="tool-header">
                        <h5>@L["Portfolio_RiskTitle"]</h5>
                        <span class="tool-badge">@L["Portfolio_RiskBadge"]</span>
                    </div>
                    <div class="tool-body">
                        <p>@L["Portfolio_RiskDesc"]</p>
                        <ul class="tool-features">
