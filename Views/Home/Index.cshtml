<!-- ===== PORTFOLIO / TOOLS SECTION ===== -->
<section class="section-dark" id="portfolio">
    <div class="container">
        <div class="text-center" data-aos="fade-up">
            <span class="section-badge">@L["Portfolio_Badge"]</span>
            <h2 class="section-title">@L["Portfolio_Title"]</h2>
            <p class="section-subtitle">@L["Portfolio_Subtitle"]</p>
        </div>
        <div class="row g-4">
            <!-- Backtesting Engine -->
            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="0">
                <div class="tool-card">
                    <div class="tool-header">
                        <h5>@L["Portfolio_BacktestTitle"]</h5>
                        <span class="tool-badge">@L["Portfolio_BacktestBadge"]</span>
                    </div>
                    <div class="tool-body">
                        <p>@L["Portfolio_BacktestDesc"]</p>
                        <ul class="tool-features">
                            <li>@L["Portfolio_BacktestF1"]</li>
                            <li>@L["Portfolio_BacktestF2"]</li>
                            <li>@L["Portfolio_BacktestF3"]</li>
                            <li>@L["Portfolio_BacktestF4"]</li>
                        </ul>
                    </div>
                    <div class="tool-footer">
                        <a asp-area="Backtesting" asp-controller="Backtest" asp-action="Index" class="btn btn-ns-primary w-100">@L["Portfolio_BacktestBtn"]</a>
                    </div>
                </div>
            </div>
            <!-- Crypto Aggregator -->
            <div class="col-lg-4" data-aos="fade-up" data-aos-delay="100">
                <div class="tool-card">
                    <div class="tool-header">
                        <h5>@L["Portfolio_CryptoTitle"]</h5>
                        <span class="tool-badge">@L["Portfolio_CryptoBadge"]</span>
                    </div>
                    <div class="tool-body">
                        <p>@L["Portfolio_CryptoDesc"]</p>
                        <ul class="tool-features">
                            <li>@L["Portfolio_CryptoF1"]</li>
                            <li>@L["Portfolio_CryptoF2"]</li>
                            <li>@L["Portfolio_CryptoF3"]</li>
                            <li>@L["Portfolio_CryptoF4"]</li>
